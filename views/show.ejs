<!DOCTYPE html>
<html>
    <head>
        <%- include( 'partials/head.ejs' ) %>
        <link rel="stylesheet" href="/styles/show.css">
    </head>
    <body> 
    <% if (keycap === undefined) { %>
        <title><%=keyboard.name%></title>
        <section><%- include( 'partials/nav.ejs' )  %></section>
        <section class="container product">
            <div class="row">
                <div class="col-lg-5 col-md-12 col-12">
                <img class="img-fluid w-100"src="<%= keyboard.image %>">
                </div>
                <div class="col-lg-6 col-md-12 col-12" id="info">
                <h2><%=keyboard.name%></h2>
                <h3>$<%=keyboard.price%></h3>
                <p><%=keyboard.description%><p>
                <form action="/products/keyboards/<%= keyboard._id %>" method="POST"><input type="submit" value="Add To Cart"></form>
            </div>
        </div>
    </section>
<% } %> 
<% if (keyboard === undefined) { %>
    <section class="container product">
        <div class="row">
            <div class="col-lg-5 col-md-12 col-12">
            <img class="img-fluid w-100"src="<%= keycap.image %>">
            </div>
            <div class="col-lg-6 col-md-12 col-12" id="info">
            <h2><%=keycap.name%></h2>
            <h3>$<%=keycap.price%></h3>
            <p><%=keycap.description%><p>
        </div>
    </div>
</section>
<% } %>
    </body>
    <footer>
        <%- include( 'partials/footer.ejs' ) %>
        </footer>
</html>